generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// can define these in their modules too under the entities folder.
model User {
  id Int @default(autoincrement()) @id
  email String @unique
  name String?
  passwordHash String
}
