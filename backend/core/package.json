    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "jest-mock-extended": "^4.0.0-beta1",
    "prettier": "^3.4.2",
    "prisma": "^6.8.0",
    "source-map-support": "^0.5.21",
